<div>
  <%= form_for(@project) do |f| %>
    <div class="form-group row">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Project name' %>
    </div>
    <div class="form-group row">
      <%= f.text_field :address, class: 'form-control', placeholder: 'Address' %>
    </div>
    <%= f.submit class: 'btn btn-purple' %>
  <% end %>
</div>

